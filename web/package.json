{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.3.3",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "grommet": "^2.13.0",
    "grommet-icons": "^4.4.0",
    "i18next": "^19.4.4",
    "i18next-xhr-backend": "^3.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.4.0",
    "react-is": "^16.13.1",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "REACT_APP_BUILD_TIME=$(date +%s) react-scripts start",
    "build": "REACT_APP_BUILD_TIME=$(date +%s) react-scripts build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.22",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0"
  },
  "bit": {
    "env": {
        "compiler": {
            "bit.envs/compilers/typescript@3.1.46": {
                "rawConfig": {
                    "tsconfig": {
                        "compilerOptions": {
                            "outDir": "dist",
                            "target": "ES2015",
                            "sourceMap": false,
                            "moduleResolution": "Node",
                            "esModuleInterop": true,
                            "module": "commonjs",
                            "allowSyntheticDefaultImports": true,
                            "resolveJsonModule": true,
                            "declaration": true,
                            "experimentalDecorators": true,
                            "inlineSourceMap": false,
                            "inlineSources": false,
                            "jsx": "react",
                            "rootDir": "./",
                            "removeComments": true,
                            "typeRoots": [
                                "./node_modules/@types"
                            ],
                            "importHelpers": false
                        },
                        "include": [
                            "./**/*"
                        ],
                        "exclude": [
                            "node_modules",
                            ".dependencies",
                            "dist"
                        ]
                    }
                }
            }
        }
    },
    "componentsDefaultDirectory": "bit-components/{name}",
    "packageManager": "yarn",
    "defaultScope": "rabbitpeepers.wp-manager"
  }
}
