{
    "env": {
        "compiler": {
            "bit.envs/compilers/typescript@3.1.46": {
                "rawConfig": {
                    "tsconfig": {
                        "compilerOptions": {
                            "outDir": "dist",
                            "target": "ES2015",
                            "sourceMap": false,
                            "moduleResolution": "Node",
                            "esModuleInterop": true,
                            "module": "commonjs",
                            "allowSyntheticDefaultImports": true,
                            "resolveJsonModule": true,
                            "declaration": true,
                            "experimentalDecorators": true,
                            "inlineSourceMap": false,
                            "inlineSources": false,
                            "jsx": "react",
                            "rootDir": "./",
                            "removeComments": true,
                            "typeRoots": [
                                "./node_modules/@types"
                            ],
                            "importHelpers": false
                        },
                        "include": [
                            "./**/*"
                        ],
                        "exclude": [
                            "node_modules",
                            ".dependencies",
                            "dist"
                        ]
                    }
                }
            }
        }
    },
    "componentsDefaultDirectory": "bit-components/{name}",
    "packageManager": "yarn",
    "useWorkspaces": true,
    "defaultScope": "rabbitpeepers.wp-manager"
}